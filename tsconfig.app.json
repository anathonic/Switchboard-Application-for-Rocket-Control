{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@icons/*": ["./src/assets/icons/*"],
      "@fonts/*": ["./src/assets/fonts/*"],
      "@styles/*": ["./src/app/styles/*"],
      "@mqtt/*": ["./src/mqtt/*"]
    }
  }
}
